@page "/room/{Id}"@page "/room/{Id}/{Password}"@using Blazor.Extensions.Canvas@using Microsoft.AspNetCore.Authorization@attribute [Authorize]@inherits GroupPaintOnlineWebApp.Client.PagesBase.RoomCanvasBase<div style="display:@DisplayOtherBox;border:2px solid black; background-color: white; width: 10%; height:fit-content; position: fixed; left: 82.5%; top: 73%" class="other-box">    <div>        <input style="font-size: 1.5vw; width: 100%; height: fit-content; " id="save" class="auth-btn" type="button" value="Save" />    </div>    <div>        <input @onclick="ChatButtonClick" style="font-size: 1.5vw; width: 100%; height: fit-content; " id="save" class="auth-btn" type="button" value="Chat" />    </div></div><div style="display:@DisplayChatBox;border:2px solid black; background-color: white; width: 20%; height:30%; position: fixed; left: 80%; top: 70%" class="chat-box">    <div class="flex-row align-items-end" style="flex-wrap:nowrap ;font-size: 1.3vw; height: 80%; width: 100%; background-color: floralwhite">        <div style="">Hi 1</div>        <div style="">Hi 2</div>    </div>    <div style="height:20%">        <input style="font-size: 1.3vw; width: 100%; border:1px solid black; height: 100%; " id="save" type="text" />    </div></div><div @onmousedown="CanvasOnMouseDown" @onmouseup="CanvasOnMouseUp" @onmouseout="CanvasOnMouseOut" class="d-flex justify-content-center align-items-stretch canvas-div" style="width:100%">    <BECanvas Width="@((Width))" Height="@(Height-((Height/4)))"></BECanvas></div><div class="d-flex justify-content-around paint-tool-box" style="background-color:white;width:100%; height:@((Height/4)+"px")">    <div>        <input @onclick="CanvasOnMouseUp" id="undo" class="paint-tool" type="image" src="http://simpleicon.com/wp-content/uploads/undo-6.png" />    </div>    <div>        <input @onclick="CanvasOnMouseUp" id="redo" class="paint-tool" type="image" src="http://simpleicon.com/wp-content/uploads/redo-6.png" />    </div>    <div>        <input @onclick="CanvasOnMouseUp" id="clear" class="paint-tool" type="image" src="https://icons-for-free.com/iconfiles/png/512/trash+bin+icon-1320086460670911435.png">    </div>    <div>        <input id="eraser" class="paint-tool" type="image" src="https://cdn0.iconfinder.com/data/icons/outline-icons/320/Eraser-512.png">    </div>    <div class="input-color-container">        <input class="paint-tool" id="color" type="color">    </div>    <div>        <input class="paint-tool styled-slider slider-progress" id="size" type="range" min="1" max="100" value="2">    </div>    <div>        <input @onclick="OtherButtonClick" id="other" type="image" class="paint-tool" src="https://image.flaticon.com/icons/png/512/61/61140.png" />    </div></div>