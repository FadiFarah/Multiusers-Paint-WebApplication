@page "/createroom"@inherits GroupPaintOnlineWebApp.Client.PagesBase.CreateRoomBase@using Microsoft.AspNetCore.Authorization@attribute [Authorize]<div class="d-flex justify-content-center mb-3 align-items-stretch" style="width:100%">    <div class="p-2"><h1>CREATE ROOM</h1></div></div><div>        <EditForm Model="Room" OnValidSubmit="HandleValidSubmit">            <DataAnnotationsValidator />            <ValidationSummary />            <div class="d-flex flex-column ml-5">                <div class="form-row p-2">                    <label for="inputRoomName">Room Name</label>                    <InputText @bind-Value="Room.RoomName" type="text" class="form-control" id="inputRoomName" placeholder="Enter the room name..." />                </div>                <div class="form-row p-2">                    <label for="inputCheckbox">Is Public</label>                </div>                <div class="form-row p-2">                    <InputCheckbox @bind-Value="Room.IsPublic" id="inputCheckbox" class="" type="checkbox" />                </div>                @if (!Room.IsPublic)                {<div class="form-row p-2">    <label for="inputPassword">Password</label>    <InputText @bind-Value="Room.Password" type="password" class="form-control" id="inputPassword" placeholder="Enter the room password..." /></div>}                <div class="form-row p-2">                    <button type="submit" class=" auth-btn">Create</button>                </div>                <div class="form-row mt-3 mr-5">                    <a href="/roomslist">Back to List</a>                </div>            </div>        </EditForm></div>